{
	"name": "katou-megumi-monorepo",
	"version": "1.0.0",
	"description": "A monorepo project dedicated to Katou Megumi",
	"private": true,
	"scripts": {
		"dev:shared": "pnpm --filter @katou-megumi/shared dev",
		"dev:web": "pnpm --filter @katou-megumi/web dev",
		"dev:backend": "pnpm --filter @katou-megumi/backend dev",
		"dev:admin": "pnpm --filter @katou-megumi/admin dev",
		"dev:mobile": "npm --filter @katou-megumi/mobile start",
		"build": "pnpm -r build",
		"lint": "pnpm -r lint",
		"clean": "pnpm -r clean",
		"install:all": "pnpm install"
	},
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=9.0.0"
	}
}
